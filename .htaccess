# POJOK BKI 4.0 - Anti-Cache Configuration
# Letakkan file ini di root directory website Anda

# Aktifkan mod_headers dan mod_expires
<IfModule mod_headers.c>
    # Set headers untuk mencegah caching pada HTML, CSS, JS
    <FilesMatch "\.(html|htm|css|js)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Set headers khusus untuk PDF agar selalu fresh
    <FilesMatch "\.(pdf)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Tambahkan headers untuk mencegah caching browser
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Konfigurasi Expires untuk file statis
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Set immediate expiration untuk file development
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/css "access plus 0 seconds"
    ExpiresByType application/javascript "access plus 0 seconds"
    ExpiresByType text/javascript "access plus 0 seconds"
    ExpiresByType application/pdf "access plus 0 seconds"
    
    # Keep longer cache untuk assets yang jarang berubah
    ExpiresByType image/png "access plus 1 day"
    ExpiresByType image/jpg "access plus 1 day"
    ExpiresByType image/jpeg "access plus 1 day"
    ExpiresByType image/gif "access plus 1 day"
    ExpiresByType image/svg+xml "access plus 1 day"
</IfModule>

# Konfigurasi MIME Types
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
    AddType text/html .html
    AddType application/pdf .pdf
</IfModule>

# Disable ETags untuk mencegah conditional requests
<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
</IfModule>

# Aktifkan kompres untuk efisiensi (opsional)
<IfModule mod_deflate.c>
    <FilesMatch "\.(css|js|html|htm|txt|xml)$">
        SetOutputFilter DEFLATE
    </FilesMatch>
</IfModule>

# Security headers tambahan
<IfModule mod_headers.c>
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Redirect HTTP ke HTTPS (opsional, uncomment jika diperlukan)
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]